html
  head
    title="Editar producto"
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous")
    link(rel="stylesheet" href="../css/form.css")

  body(class="body")
    div(class="container mt-3")
      div(class="jumbotron")
        h1="Editar el producto: " + id
        br
        form(action=`/editar/${id}?_method=PUT` method="post")
          div(class="form-group")
            label(for="nombre")="Nombre"
            input(type="text" id="nombre" class="form-control" name="nombre" placeholder=product.nombre required="required")
          div(class="form-group")
            label(for="precio")="Precio"
            input(type="number" id="precio" class="form-control" name="precio" min="0.01" step="0.01" placeholder=product.precio required)
          div(class="form-group")
            label(for="descripcion")="Descripci√≥n"
            input(type="text" id="descripcion" class="form-control" name="descripcion" placeholder=product.descripcion required)
          div(class="form-group")
            label(for="foto")="Foto"
            input(type="url" id="foto" class="form-control" name="foto" placeholder=product.foto required)
          button(class="btn btn-success mt-3 mb-5")="Enviar"
          a(class="btn btn-info mt-3 mb-5" href="/listar")="Ir a listado"